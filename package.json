{
  "name": "docbase",
  "version": "0.0.2",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "repository": {
    "url": "https://github.com/SOVLOOKUP/docbase"
  },
  "homepage": "https://docbase.cc",
