    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.19.0",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "hono": "^4.7.2",
    "tsup": "^8.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "es-toolkit": "^1.32.0",
    "fdir": "^6.4.3",
    "fs-extra": "^11.3.0",
    "hash-wasm": "^4.12.0",
    "markitdown-ts": "^0.0.4",
    "meilisearch": "^0.49.0",
    "slash": "^5.1.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "treeshake": true,
    "shims": true,
    "minify": true
  },
  "files": [
    "./dist/**"
  ]
