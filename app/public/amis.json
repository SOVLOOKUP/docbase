{
  "type": "page",
  "body": {
    "type": "flex",
    "items": [
      {
        "type": "service",
        "width": "100%",
        "api": {
          "method": "post",
          "url": "/v0/search",
          "sendOn": "this.q !== undefined && this.q.length > 0"
        },
        "body": {
          "type": "flex",
          "direction": "column",
          "items": [
            {
              "type": "search-box",
              "name": "q",
              "searchImediately": true
            },
            {
              "type": "list",
              "source": "$items",
              "listItem": {
                "body": { "type": "markdown", "value": "${content}" }
              }
            }
          ]
        }
      }
    ]
  }
}
